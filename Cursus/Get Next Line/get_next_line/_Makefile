NAME	= gnl.a

SRCS	=	get_next_line.c \
			get_next_line_utils.c



OBJS	= $(SRCS:.c=.o)


CFLAGS	= -Wall -Werror -Wextra

CC 		= gcc

${NAME}: ${OBJS}
	${CC} ${CFLAGS} -c ${SRCS}
	ar rcs ${NAME} ${OBJS}

all: ${NAME}

clean:
	rm -f ${OBJS} 

fclean: clean
	rm -f $(NAME)

re: fclean all bonus



.PHONY: all bonus clean fclean re

